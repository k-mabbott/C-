@{
    ViewData["Title"] = "Home Page";
}
@model FormInfo

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div>
        <form asp-action="process" asp-controller="Home" class="form-control px-5" >
            <label asp-for="Name" class="mt-3"></label>
            <span asp-validation-for="Name" class="text-danger d-block"></span>
            <input asp-for="Name" class="form-control" >
            <label asp-for="Email" class="mt-3"></label>
            <span asp-validation-for="Email" class="text-danger d-block"></span>
            <input asp-for="Email" class="form-control" >
            <label for="DateOfBirth" class="mt-3">Date of Birth</label>
            <span asp-validation-for="DateOfBirth" class="text-danger d-block"></span>
            <input type="date" asp-for="DateOfBirth" class="form-control" >
            <label asp-for="Password" class="mt-3"></label>
            <span asp-validation-for="Password" class="text-danger d-block"></span>
            <input asp-for="Password" class="form-control" >
            <label for="FavOddNum" class="mt-3">Favorite Prime Number</label>
            <span asp-validation-for="FavOddNum" class="text-danger d-block"></span>
            <input type="number" asp-for="FavOddNum" class="form-control" >
            <button type="submit" class="btn btn-outline-success my-4" > Submit </button>
        </form>
    </div>
</div>
