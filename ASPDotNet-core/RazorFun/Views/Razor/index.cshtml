<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Razor Fun!</title>
</head>
<body>
    <h1>Razor Fun!</h1>
    @{
        List<string> FoodList = new List<string>() {"Apple Pie","Pizza","Cinnamon Rolls","Lasagna","Donuts","Chocolate Cake", "Burritos"};
        foreach(string i in FoodList)
        {
            if (i[0] == 'C')
            {
                <p style="color: red" >@i</p>
            } else 
            {
                <p>@i</p>
            }
        }
    }
</body>
</html>