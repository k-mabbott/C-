<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styles.css">
    <title>Profile Page</title>
</head>

<body>
    <nav>
        <a href="/">Home</a>
    </nav>
    @* <h1>About Me</h1> *@
    <main>
        <form action="process" method="post" class="card">
            <div class="input">
                <label for="Name">Your Name: </label>
                <input id="Name" name="Name" placeholder="John Doe" type="text">
            </div>
            <div class="input">
                <label for="Location">Dojo Location: </label>
                <select name="Location" id="Location">
                    <option value="" hidden selected >Please select an option</option>
                    <option value="Seattle">Seattle</option>
                    <option value="San Jose">San Jose</option>
                    <option value="Dallas">Dallas</option>
                </select>
            </div>
            <div class="input">
                <label for="Language">Favorite Language: </label>
                <select name="Language" id="Language">
                    <option value="" hidden selected >Please select an option</option>
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    <option value="JavaScript">JavaScript</option>
                </select>
            </div>
            <div class="input">
                <label for="Comment">Comment: </label>
                <textarea name="Comment" id="Comment" cols="30" rows="5" placeholder="Add comment here..."></textarea>
            </div>
            <button type="submit" >Submit</button>
        </form>

    </main>
</body>

</html>

