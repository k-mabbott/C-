

@model Wedding


@await Html.PartialAsync("_Navigation")

<h1 class="my-5 " >Plan a Wedding</h1>
<form asp-action="CreateWedding" asp-controller="Wedding" method="post">
    <div>
        <label asp-for="WedderOne"></label>
        <span asp-validation-for="WedderOne" style="font-weight: 500;" class="text-danger d-block" ></span>
        <input asp-for="WedderOne" class="form-control" >
    </div>
    <div>
        <label asp-for="WedderTwo"></label>
        <span asp-validation-for="WedderTwo" style="font-weight: 500;" class="text-danger d-block" ></span>
        <input asp-for="WedderTwo" class="form-control" >
    </div>
    <div>
        <label asp-for="Date"></label>
        <span asp-validation-for="Date" style="font-weight: 500;" class="text-danger d-block" ></span>
        <input type="date" asp-for="Date" class="form-control" >
    </div>
    <div>
        <label asp-for="Address"></label>
        <span asp-validation-for="Address" style="font-weight: 500;" class="text-danger d-block" ></span>
        <input asp-for="Address" class="form-control" >
    </div>
    <button type="submit" class="btn btn-outline-primary my-3" >Create</button>
</form>