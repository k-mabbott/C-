@{
    ViewData["Title"] = "Products";
}



<div class="text-center">
    <div class="d-flex justify-content-between container">
        <section class="card shadow p-3 w-100 m-3">
            <h1 class="display-4 my-3">New Product</h1>
            <hr class="my-3 w-75 mx-auto">
            @await Html.PartialAsync("_NewProduct")
        </section>
        <section class="card shadow p-3 w-100 m-3">
            <h1 class="display-4 my-3">All Products</h1>
            <hr class="my-3 w-75 mx-auto">
            @foreach (Product p in ViewBag.allProducts)
            {
                <p>
                    <a asp-action="OneProduct" asp-controller="Product" asp-route-productId="@p.ProductId">
                        @p.Name
                    </a>
                </p>
            }
        </section>
    </div>
</div>
