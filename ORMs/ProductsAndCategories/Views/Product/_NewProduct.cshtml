

@model Product

<form asp-action="CreateProduct" asp-controller="Product" method="post">
    <div>
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" style="font-weight: 500;" class="text-danger d-block" ></span>
        <input asp-for="Name" class="form-control" >
    </div>
    <div>
        <label asp-for="Description"></label>
        <span asp-validation-for="Description" style="font-weight: 500;" class="text-danger d-block" ></span>
        <input asp-for="Description" class="form-control" >
    </div>
    <div>
        <label asp-for="Price"></label>
        <span asp-validation-for="Price" style="font-weight: 500;" class="text-danger d-block" ></span>
        <input asp-for="Price" class="form-control" >
    </div>
    <button type="submit" class="btn btn-outline-primary my-3" >Create</button>
</form>

