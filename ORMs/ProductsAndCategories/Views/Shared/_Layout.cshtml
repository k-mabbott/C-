
@{
    string controller = ViewContext.RouteData.Values["Controller"].ToString();
    string action = ViewContext.RouteData.Values["Action"].ToString();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductsAndCategories</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductsAndCategories.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
    <nav class="border-bottom box-shadow mb-3 d-flex justify-content-center">
        <div>
            <a class="text-lg fs-3 @(controller == "Product" && action == "Index" ? "text-decoration-none text-dark" : "" )" asp-controller="Product"
                asp-action="Index">Products</a>
        </div>
        <p class="fs-3 mx-2">|</p>
        <div>
            <a class="text-lg fs-3 @(controller == "Category" && action == "Index" ? "text-decoration-none text-dark" : "" )" asp-controller="Category" asp-action="Index">Categories</a>
        </div>
    </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
