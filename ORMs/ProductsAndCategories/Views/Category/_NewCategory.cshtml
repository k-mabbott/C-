


@model Category

<form asp-action="CreateCategory" asp-controller="Category" method="post">
    <div>
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" style="font-weight: 500;" class="text-danger d-block" ></span>
        <input asp-for="Name" class="form-control" >
    </div>
    <button type="submit" class="btn btn-outline-primary my-3" >Create</button>
</form>

